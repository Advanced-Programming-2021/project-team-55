<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="720" prefWidth="1080" stylesheets="@../CSS/Menu.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="yugioh.controller.menucontroller.RegisterMenuController">
   <children>
       <HBox layoutX="230.0" layoutY="40.0" styleClass="title" />
       <VBox alignment="CENTER" layoutX="200.0" layoutY="130.0" prefHeight="210.0" prefWidth="200.0">
           <TextField fx:id="usernameField" promptText="username" />
           <TextField fx:id="nicknameField" promptText="nickname"/>
           <PasswordField fx:id="passwordField" promptText="password">
               <VBox.margin>
                   <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
           </PasswordField>
           <VBox alignment="CENTER" prefHeight="100.0" prefWidth="100.0">
               <Button mnemonicParsing="false" onMouseClicked="#RegisterClicked" text="register">
                   <VBox.margin>
                       <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                   </VBox.margin>
               </Button>
               <Button mnemonicParsing="false" onMouseClicked="#backClicked" text="back">
                   <VBox.margin>
                       <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                   </VBox.margin>
               </Button>
           </VBox>
       </VBox>
        <Label layoutX="237.0" layoutY="40.0" styleClass="titleMenu" stylesheets="@../CSS/Menu.css" text="Register Menu" textFill="chartreuse">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
