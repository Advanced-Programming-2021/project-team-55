<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0" styleClass="page"
            xmlns="http://javafx.com/javafx/11" >
    <VBox alignment="CENTER" layoutX="160.0" layoutY="145.0" prefHeight="200.0" prefWidth="239.0">
        <TextField fx:id="usernameField" promptText="username">
            <VBox.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </VBox.margin>
        </TextField>
        <PasswordField fx:id="passwordField" promptText="password">
            <VBox.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </VBox.margin>
        </PasswordField>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <Button mnemonicParsing="false"  text="Sign Up">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" text="Sign In">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </HBox.margin>
            </Button>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
<!--        <Button mnemonicParsing="false" text="Sign in as Guest" onMouseClicked="#signInAsGuest"/>-->
    </VBox>
<!--    <Button layoutX="532.0" layoutY="354.0" mnemonicParsing="false" onMouseClicked="#exit" text="Exit"/>-->
    <ImageView fitHeight="60.0" fitWidth="255.0" layoutX="152.0" layoutY="35.0" pickOnBounds="true"
               preserveRatio="true">
